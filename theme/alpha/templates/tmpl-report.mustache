{{!
    @template theme_alpha/tmpl-report
}}
{{> theme_alpha/head }}

<body {{{ bodyattributes }}}>
    {{> core/local/toast/wrapper}}

    <div id="page-wrapper" class="d-print-block {{#output.courseheadermenu}}rui--course-with-nav{{/output.courseheadermenu}} {{^output.courseheadermenu}}rui--course-witout-nav{{/output.courseheadermenu}}">

        {{{ output.standard_top_of_body_html }}}
        {{^hiddensidebar}}
            {{> theme_alpha/nav-drawer }}
        {{/hiddensidebar}}
        {{^hidecourseindexnav}}{{> theme_alpha/courseindex-tmpl}}{{/hidecourseindexnav}}

        <div id="page" data-region="mainpage" data-usertour="scroller" class="container-fluid drawers {{#draweropenright}}show-hidden-drawer{{/draweropenright}} drag-container">

            {{> theme_alpha/navbar }}
            {{{ output.breadcrumbs }}}

            <div id="topofscroll" class="main-inner">
                <div id="page-content" class="page-content wrapper-page">

                    <div id="region-main-box" class="region-main-wrapper">
                        <section id="region-main" class="region-main-content {{#hasblocks}}has-blocks{{/hasblocks}}" aria-label="{{#str}}content{{/str}}">
                            <div class="rui-blocks-wrapper">
                                <div class="wrapper-course">

                                    {{#secondarymoremenu}}
                                        <div class="secondary-navigation d-print-none">
                                            {{> core/moremenu}}
                                        </div>
                                    {{/secondarymoremenu}}

                                    {{{coursepageinformationbanners}}}
                                    {{{ output.simple_header }}}

                                    {{#hasregionmainsettingsmenu}}
                                        <div class="region_main_settings_menu_proxy"></div>
                                    {{/hasregionmainsettingsmenu}}
                                    {{{ output.course_content_header }}}
                                    {{#headercontent}}
                                        {{> core/activity_header }}
                                    {{/headercontent}}
                                    {{#overflow}}
                                        <div class="container-fluid tertiary-navigation px-0">
                                            <div class="navitem">
                                                {{> core/url_select}}
                                            </div>
                                        </div>
                                    {{/overflow}}
                                    {{{ output.main_content }}}
                                    {{{ output.activity_navigation }}}
                                    {{{ output.course_content_footer }}}
                                </div>

                                {{> theme_alpha/hasblocks-tmpl }}

                            </div>

                        </section>
                    </div>
                </div>
                {{> theme_alpha/footer }}
            </div>

        </div>

        {{{ output.standard_after_main_region_html }}}

    </div>

</body>

</html>
{{#js}}
    M.util.js_pending('theme_alpha/loader');
    require(['theme_alpha/loader', 'theme_alpha/drawer'], function(Loader, Drawer) {
    Drawer.init();
    M.util.js_complete('theme_alpha/loader');
    });
{{/js}}
